class Solution {
    int sum = 0;

    void find(TreeNode root) {
        if (root == null)
            return;
        if (root.left == null && root.right == null) {
            sum += root.val;
            root.val = sum;
            return;
        }
        find(root.right);
        sum += root.val;
        root.val = sum;
        find(root.left);
    }

    public TreeNode convertBST(TreeNode root) {
        find(root);
        return root;
    }
}
